{
	"include": ["src"],
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"strict": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext"
	},
	"exclude": ["src/**/*.test.ts"]
}
